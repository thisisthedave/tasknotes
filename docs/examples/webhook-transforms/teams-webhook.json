{
  "task.created": {
    "@type": "MessageCard",
    "@context": "http://schema.org/extensions",
    "themeColor": "28a745",
    "summary": "New Task Created",
    "sections": [
      {
        "activityTitle": "üìã New Task Created",
        "activitySubtitle": "${data.task.title}",
        "facts": [
          {
            "name": "Status:",
            "value": "${data.task.status}"
          },
          {
            "name": "Priority:",
            "value": "${data.task.priority}"
          },
          {
            "name": "Due Date:",
            "value": "${data.task.due}"
          },
          {
            "name": "Vault:",
            "value": "${vault.name}"
          }
        ]
      }
    ]
  },
  
